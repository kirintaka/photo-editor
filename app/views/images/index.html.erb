<table class="table table-borderless text-center align-middle">
  <thead>
    <tr class="table-danger table-group-divider h1 ">
      <th class="fw-semibold">Welcome to The Photo Editor!</th>
    </tr>
  </thead>

  <tbody>
    <tr class="table-borderless" style="height: 350px;">
      <td>
        <div class="col d-flex justify-content-center">

        <%= form_for @image, html: { multipart: true } do |f| %>

          <div class="card border-dark" style="width: 30rem; height: 10rem;">
            <div class="card-body">
              <h5 class="card-title"><%= f.label :image %></h5>
              <p class="card-text"><%= f.file_field :image %></p>
              <%= f.submit "Upload", class: "btn btn-outline-dark" %>
            </div>
          </div>

        <% end %>

        </div>

      </td>
    </tr>


  </tbody>
</table>

