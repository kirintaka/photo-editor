<div class="col d-flex justify-content-center">

<%= form_for @image, html: { multipart: true, class: "form-inline" } do |f| %>

  <div class="card border-dark" style="width: 30rem; height: 10rem;">
    <div class="card-body">
      <h5 class="card-title"><%= title %></h5>
      <p class="card-text"><%= f.file_field :image, class: 'form-control' %></p>
      <%= f.submit "Upload", class: "btn btn-outline-dark" %>
    </div>
  </div>

<% end %>

</div>